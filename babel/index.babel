            {chips}
            <input onChange={this.handleInputValue.bind(this)} ref="chipInput" className='color-Tp center-align' id='chipsInput' type='text' name='chipsInput' placeholder='Type here to add more streamers'/>
          </div>
        </div>
        <div className='modal-footer'>
          <button className='btn color-Bp' onClick={this.handleAddingChip.bind(this)}> Add Streamer</button>
          <a className='modal-action modal-close waves-effect waves-green btn-flat'>Close</a>
        </div>
      </div>
