class AllChips extends React.Component {
  handleInputValue() {
    const toDelete = this.refs.chipe;
    console.log(toDelete);
  };
  handleAddingChip() {
    const toAdd = this.refs.chipInput.value;
    if(!toAdd) {
      console.warn('Type username to add streamer!');
      return;
    }
    else {
      this.props.updateStreamers(toAdd);
      this.props.getStreamerFullData(toAdd);
      this.refs.chipInput.value = '';
    }
  };
  handleRemovingChip(streamer) {
    this.props.removeChip(streamer);
  };
  render() {
    const chips = this.props.chips.map((chip, i) => {
      return <Chip name={chip} key={i} id={i} logo={this.props.logo} removeChip={this.handleRemovingChip.bind(this)}/>
    })
